apiVersion: config.k8s.io/v1alpha1
kind: Krmfile
openAPI:
  definitions:
    io.k8s.cli.setters.namespace:
      description: Namespace to install GitLab Kubernetes Agent into
      type: string
      x-k8s-cli:
        setter:
          name: namespace
          value: gitlab-agent
          setBy: package-default
          count: 1
    io.k8s.cli.setters.kas-address:
      description: kas address. Use grpc://host.docker.internal:8150 if connecting from within Docker e.g. from kind.
      type: string
      x-k8s-cli:
        setter:
          name: kas-address
          value: wss://kas.gitlab.com
          setBy: package-default
    io.k8s.cli.setters.prometheus-scrape:
      description: Enable or disable Prometheus scraping of agentk metrics.
      type: string
      x-k8s-cli:
        setter:
          name: prometheus-scrape
          value: "true"
          setBy: package-default
    io.k8s.cli.setters.agent-version:
      description: Image tag for agentk container
      type: string
      x-k8s-cli:
        setter:
          name: agent-version
          value: stable
          setBy: package-default
    io.k8s.cli.substitutions.agent-version-subst:
      x-k8s-cli:
        substitution:
          name: agent-version-subst
          pattern: registry.gitlab.com/gitlab-org/cluster-integration/gitlab-agent/agentk:${agent-version}
          values:
          - marker: ${agent-version}
            ref: '#/definitions/io.k8s.cli.setters.agent-version'
    io.k8s.cli.setters.name-prefix:
      type: string
      description: Prefix for resource names
      x-k8s-cli:
        setter:
          name: name-prefix
          value: ""
