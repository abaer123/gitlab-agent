apiVersion: config.k8s.io/v1alpha1
kind: Krmfile
openAPI:
  definitions:
    io.k8s.cli.setters.namespace:
      description: Namespace to install agentk into
      type: string
      x-k8s-cli:
        setter:
          name: namespace
          value: agentk
          setBy: package-default
          count: 1
    io.k8s.cli.setters.kas-address:
      description: kas address. Use tcp://host.docker.internal:5005 if connecting from within Docker e.g. from kind.
      x-k8s-cli:
        setter:
          name: kas-address
          value: tcp://127.0.0.1:5005
