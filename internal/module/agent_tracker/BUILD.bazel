load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")
load("@rules_proto//proto:defs.bzl", "proto_library")
load("@rules_proto_grpc//go:defs.bzl", "go_proto_compile")
load("//build:build.bzl", "copy_to_workspace")

proto_library(
    name = "proto",
    srcs = ["agent_tracker.proto"],
    tags = ["manual"],
    visibility = ["//visibility:public"],
    deps = [
        "//internal/module/modshared:proto",
        "@com_google_protobuf//:any_proto",
        "@com_google_protobuf//:timestamp_proto",
    ],
)

go_proto_compile(
    name = "proto_compile",
    tags = ["manual"],
    deps = [":proto"],
)

copy_to_workspace(
    name = "extract_generated",
    file_to_copy = "agent_tracker.pb.go",
    label = ":proto_compile",
    workspace_relative_target_directory = "internal/module/agent_tracker",
)

go_library(
    name = "agent_tracker",
    srcs = [
        "agent_tracker.pb.go",
        "tracker.go",
    ],
    importpath = "gitlab.com/gitlab-org/cluster-integration/gitlab-agent/internal/module/agent_tracker",
    visibility = ["//:__subpackages__"],
    deps = [
        "//internal/module/modshared",
        "//internal/tool/logz",
        "@com_github_go_redis_redis_v8//:redis",
        "@com_github_golang_protobuf//proto",
        "@com_github_golang_protobuf//ptypes/any",
        "@com_github_golang_protobuf//ptypes/timestamp",
        "@org_golang_google_protobuf//proto",
        "@org_golang_google_protobuf//reflect/protoreflect",
        "@org_golang_google_protobuf//runtime/protoimpl",
        "@org_golang_google_protobuf//types/known/anypb",
        "@org_golang_google_protobuf//types/known/timestamppb",
        "@org_uber_go_zap//:zap",
    ],
)

go_test(
    name = "agent_tracker_test",
    size = "small",
    srcs = ["tracker_test.go"],
    embed = [":agent_tracker"],
    race = "on",
    deps = [
        "//internal/module/modshared",
        "@com_github_go_redis_redis_v8//:redis",
        "@com_github_google_go_cmp//cmp",
        "@com_github_stretchr_testify//assert",
        "@com_github_stretchr_testify//require",
        "@org_golang_google_protobuf//proto",
        "@org_golang_google_protobuf//testing/protocmp",
        "@org_golang_google_protobuf//types/known/anypb",
        "@org_golang_google_protobuf//types/known/timestamppb",
        "@org_uber_go_zap//zaptest",
    ],
)
