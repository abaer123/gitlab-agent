load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("//build:proto.bzl", "go_grpc_generate")

go_grpc_generate(
    src = "rpc.proto",
    workspace_relative_target_directory = "internal/module/agent_tracker/rpc",
    deps = [
        "//internal/module/agent_tracker:proto",
        "@com_github_envoyproxy_protoc_gen_validate//validate:validate_proto",
    ],
)

go_library(
    name = "rpc",
    srcs = [
        "rpc.pb.go",
        "rpc.pb.validate.go",
        "rpc_grpc.pb.go",
    ],
    importpath = "gitlab.com/gitlab-org/cluster-integration/gitlab-agent/internal/module/agent_tracker/rpc",
    visibility = ["//:__subpackages__"],
    deps = [
        "//internal/module/agent_tracker",
        "@com_github_envoyproxy_protoc_gen_validate//validate:go_custom_library",
        "@com_github_golang_protobuf//proto",
        "@com_github_golang_protobuf//ptypes",
        "@org_golang_google_grpc//:grpc",
        "@org_golang_google_grpc//codes",
        "@org_golang_google_grpc//status",
        "@org_golang_google_protobuf//reflect/protoreflect",
        "@org_golang_google_protobuf//runtime/protoimpl",
    ],
)
