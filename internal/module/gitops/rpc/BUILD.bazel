load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")
load("@rules_proto//proto:defs.bzl", "proto_library")
load("@rules_proto_grpc//go:defs.bzl", "go_grpc_compile")
load("//build:build.bzl", "copy_to_workspace")

proto_library(
    name = "rpc_proto",
    srcs = ["rpc.proto"],
    tags = ["manual"],
    visibility = ["//visibility:public"],
    deps = ["//pkg/agentcfg:agentcfg_proto"],
)

go_grpc_compile(
    name = "grpc",
    tags = ["manual"],
    deps = [":rpc_proto"],
)

copy_to_workspace(
    name = "extract_generated",
    file_to_copy = "rpc.pb.go",
    label = ":grpc",
    workspace_relative_target_directory = "internal/module/gitops/rpc",
)

go_library(
    name = "rpc",
    srcs = [
        "obj_to_sync_watcher.go",
        "rpc.pb.go",
    ],
    importpath = "gitlab.com/gitlab-org/cluster-integration/gitlab-agent/internal/module/gitops/rpc",
    visibility = ["//:__subpackages__"],
    deps = [
        "//internal/tool/grpctool",
        "//internal/tool/retry",
        "//pkg/agentcfg",
        "@com_github_golang_protobuf//proto",
        "@org_golang_google_grpc//:grpc",
        "@org_golang_google_grpc//codes",
        "@org_golang_google_grpc//status",
        "@org_golang_google_protobuf//reflect/protoreflect",
        "@org_golang_google_protobuf//runtime/protoimpl",
        "@org_uber_go_zap//:zap",
    ],
)

go_test(
    name = "rpc_test",
    size = "small",
    srcs = ["obj_to_sync_watcher_test.go"],
    embed = [":rpc"],
    race = "on",
    deps = [
        "//internal/tool/testing/matcher",
        "//internal/tool/testing/mock_rpc",
        "//pkg/agentcfg",
        "@com_github_golang_mock//gomock",
        "@org_uber_go_zap//zaptest",
    ],
)
