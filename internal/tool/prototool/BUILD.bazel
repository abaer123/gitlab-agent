load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")
load("//build:proto.bzl", "go_proto_generate")

go_proto_generate(
    src = "prototool.proto",
    workspace_relative_target_directory = "internal/tool/prototool",
    deps = [
        "@com_github_envoyproxy_protoc_gen_validate//validate:validate_proto",
    ],
)

go_library(
    name = "prototool",
    srcs = [
        "defaulting.go",
        "extra_methods.go",
        "prototool.pb.go",
        "prototool.pb.validate.go",
    ],
    importpath = "gitlab.com/gitlab-org/cluster-integration/gitlab-agent/internal/tool/prototool",
    visibility = ["//:__subpackages__"],
    deps = [
        "@com_github_envoyproxy_protoc_gen_validate//validate:go_custom_library",
        "@com_github_golang_protobuf//proto",
        "@com_github_golang_protobuf//ptypes",
        "@com_github_golang_protobuf//ptypes/duration",
        "@org_golang_google_protobuf//reflect/protoreflect",
        "@org_golang_google_protobuf//runtime/protoimpl",
        "@org_golang_google_protobuf//types/known/durationpb",
    ],
)

go_test(
    name = "prototool_test",
    size = "small",
    srcs = ["defaulting_test.go"],
    embed = [":prototool"],
    race = "on",
    deps = [
        "@com_github_stretchr_testify//assert",
        "@org_golang_google_protobuf//types/known/durationpb",
    ],
)
