    name = "wstunnel_test",
    srcs = [
        "main_test.go",
        "ws_test.go",
    ],
    embed = [":wstunnel"],
    deps = [
        "@com_github_stretchr_testify//assert",
        "@com_github_stretchr_testify//require",
        "@io_nhooyr_websocket//:websocket",
