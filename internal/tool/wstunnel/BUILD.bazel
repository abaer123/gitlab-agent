load("//build:build.bzl", "go_custom_test")
load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "wstunnel",
    srcs = [
        "api.go",
        "client.go",
        "server.go",
    ],
    importpath = "gitlab.com/gitlab-org/cluster-integration/gitlab-agent/internal/tool/wstunnel",
    visibility = ["//:__subpackages__"],
