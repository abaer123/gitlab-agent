load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "gitaly",
    srcs = [
        "path_fetcher.go",
        "path_visitor.go",
        "poller.go",
        "pool.go",
        "reference_discovery.go",
    ],
    importpath = "gitlab.com/gitlab-org/cluster-integration/gitlab-agent/internal/gitaly",
    visibility = ["//:__subpackages__"],
